<% layout('layouts/boilerplate') %>


  <div class="container d-flex justify-content-center align-items-center my-5 ">
    <div class="card p-3" style="width: 18rem;">
      <img
        src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">SignUp</h5>
      </div>
      <form action="/register" method="post" class="form-validation" novalidate>
        <div class="mb-3">
          <label class="form-label" for="username">username</label>
          <input class="form-control" type="text" id="username" name="username" autofocus required>
          <div class="valid-feedback">
            looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="email">email</label>
          <input class="form-control" type="email" id="email" name="email" required>
          <div class="valid-feedback">
            looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">password</label>
          <input class="form-control" type="password" id="password" name="password" required>
          <div class="valid-feedback">
            looks good!
          </div>
        </div>

        <button class=" btn btn-success btn-block">signUP</button>
      </form>
    </div>
  </div>